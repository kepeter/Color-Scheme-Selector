<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:ColorSchemeExtension" 
    x:Class="ColorSchemeExtension.ColorWheelRGB" 
    mc:Ignorable="d" 
    d:DesignHeight="256" 
    d:DesignWidth="288">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <local:ColorWheelGB x:Name="GBPart" Height="256" Width="256"/>
            <local:ColorWheelR x:Name="RPart" Height="256" Width="16" Margin="16,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
